{% trans_default_domain 'FOSUserBundle' %}

<div id="form-login" class="col-xl-4 offset-xl-4 col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-6 offset-sm-3 col-8 offset-2">

    <form action="{{ path("fos_user_security_check") }}" method="post">

        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="off" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" class="form-control" name="_password" required="required" autocomplete="current-password" />
        </div>

        {% if error %}

            <div class="form-group">
                <small id="passwordHelp" class="text-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </small> 
            </div>

        {% endif %}


        <div class="form-check">
            <input type="checkbox" id="remember_me" class="form-check-input" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

        <input type="submit" id="_submit" class="btn btn-primary" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    </form>
    
</div>
