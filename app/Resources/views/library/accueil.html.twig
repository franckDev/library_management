{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block stylesheets %}
        <!-- Style Perso Accueil CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/accueil/style.css') }}" />
{% endblock %}

{% block body %}

    <div id="gr_btn" class="col-12">
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <button id="btn_co" class="btn btn-outline-success" type="button" url="{{ path('fos_user_security_login')}}">{{ 'general.button.connexion'|trans }}</button>
                <button id="btn_in" class="btn btn-sm btn-outline-secondary" type="button" url="{{ path('fos_user_registration_register')}}">{{ 'general.button.register'|trans }}</button>
            </form>
        </nav>
    </div>

    <div class="col-12">
        <div id="middle_card" class="card border-dark mb-3">
            <div class="card-header">
                <iframe src="{{ asset('upload/' ~ name) }}" style="width: 100%;height: 500px;" ></iframe>
            </div>
            <div class="card-body text-dark">
                <h5 class="card-title">{{ title }}</h5>
                <p class="card-text">{{ description }}</p>
            </div>
        </div> 
    </div>
        
{% endblock %}

{% block javascripts %}

    <script>
    
        $("button").mouseover(function(){
           
           var id = $(this).attr("id");
           
           if(id == "btn_co"){
               
               $(this).prop("class", "btn btn-outline-success");
               $("#btn_in").prop("class", "btn btn-sm btn-outline-secondary");
           }
           
            if(id == "btn_in"){
               
               $(this).prop("class", "btn btn-outline-success");
               $("#btn_co").prop("class", "btn btn-sm btn-outline-secondary");
           }
           
        });
        
        $("#btn_co").mouseout(function(){
            
            $("#btn_in").mouseout(function(){
            
                $("#btn_co").prop("class", "btn btn-outline-success");
                $("#btn_in").prop("class", "btn btn-sm btn-outline-secondary");
            });
            
        });
        
    </script>
    
{% endblock %}
